<UserControl x:Class="VoilaTile.Configurator.Views.EditorFloatingCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="480" Height="320">
    <Border CornerRadius="2"
            Background="{StaticResource BackgroundDarkGrayOpaque}"
            BorderThickness="0"
            Opacity="{Binding DialogCardOpacity}"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{StaticResource BackgroundMediumLightGray}"
                    BorderBrush="Transparent">
                <Border Width="40" Height="6" Background="{StaticResource BackgroundLightestGray}" CornerRadius="3" BorderThickness="0"/>
            </Border>

            <Grid Grid.Row="1" Margin="20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="14" VerticalAlignment="Center" Text="Split Horizontally:" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="14" VerticalAlignment="Center" Text="Left Click on a Tile." Foreground="White"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" FontSize="14" VerticalAlignment="Center" Text="Split Veritcally:" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" FontSize="14" VerticalAlignment="Center" Text="Left Click on a Tile while holding [Shift]." Foreground="White"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" FontSize="14" VerticalAlignment="Center" Text="Delete Divider:" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" FontSize="14" VerticalAlignment="Center" Text="Press [R] while dragging a Divider." Foreground="White"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" FontSize="14" VerticalAlignment="Center" Text="Adjust Layout:" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" FontSize="14" VerticalAlignment="Center" Text="Left Click and Drag on a Divider Handle." Foreground="White"/>
            </Grid>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource RoundedRectActionButton}"
                        Width="200" 
                        Margin="0,0,30,0" 
                        Click="Cancel_Click" 
                        Background="{StaticResource BackgroundLightestGray}" 
                        Content="Cancel"/>

                <Button Style="{StaticResource RoundedRectActionButton}"
                        Width="200" 
                        Click="Save_Click" 
                        Background="{StaticResource AccentRed}" 
                        Content="Save &amp; Quit"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>

