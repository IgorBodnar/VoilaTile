<UserControl x:Class="VoilaTile.Configurator.Views.ZoneLabelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="ZoneNumberText"
                   FontSize="60"
                   FontWeight="Bold"
                   Foreground="White"
                   TextAlignment="Center"/>
        <TextBlock x:Name="ZoneSizeText"
                   FontSize="20"
                   FontWeight="DemiBold"
                   Foreground="White"
                   TextAlignment="Center"/>
    </StackPanel>
</UserControl>

