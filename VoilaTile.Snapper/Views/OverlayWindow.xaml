<Window x:Class="VoilaTile.Snapper.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:VoilaTile.Snapper.ViewModels"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="{StaticResource BackgroundDarkGray}"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Focusable="False">

    <Window.Resources>
        <Style TargetType="Rectangle" x:Key="TileRectangleStyle">
            <Setter Property="Stroke" Value="{StaticResource TextWhite}" />
            <Setter Property="Fill" Value="Transparent" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="RenderOptions.EdgeMode" Value="Aliased" />

            <Style.Triggers>
                <!-- Partial match (highlighted) -->
                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                    <Setter Property="Fill" Value="{StaticResource AccentRedFaint}" />
                </DataTrigger>

                <!-- Exact match (stronger) -->
                <DataTrigger Binding="{Binding IsMatched}" Value="True">
                    <Setter Property="Fill" Value="{StaticResource AccentRedTranslucent}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Canvas>
            <!-- Tiles -->
            <ItemsControl ItemsSource="{Binding Tiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:TileViewModel}">
                        <Canvas>
                            <Rectangle
                                Style="{StaticResource TileRectangleStyle}"
                                Width="{Binding Width}"
                                Height="{Binding Height}">
                                <Rectangle.RenderTransform>
                                    <TranslateTransform X="{Binding X}" Y="{Binding Y}" />
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Canvas>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Hints -->
            <ItemsControl ItemsSource="{Binding Tiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:TileViewModel}">
                        <Canvas>
                            <Viewbox
                    Stretch="Uniform"
                    Width="100" Height="40"
                    Canvas.Left="{Binding CenterX}"
                    Canvas.Top="{Binding CenterY}"
                    RenderTransformOrigin="0.5,0.5">

                                <Viewbox.RenderTransform>
                                    <TranslateTransform X="-50" Y="-20"/>
                                </Viewbox.RenderTransform>

                                <Border
                                    Background="{StaticResource BackgroundDarkGray}"
                                    BorderBrush="{StaticResource TextWhite}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <TextBlock Text="{Binding Hint}"
                                               Foreground="{StaticResource TextWhite}"
                                               FontWeight="Bold"
                                               FontSize="24"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Viewbox>
                        </Canvas>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>

        <!-- Input bar at bottom -->
        <TextBlock Text="{Binding CurrentInput}"
                   FontFamily="Consolas"
                   FontSize="18"
                   Foreground="{StaticResource TextWhite}"
                   Background="{StaticResource BackgroundDarkGray}"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Bottom"
                   Padding="10" />
    </Grid>
</Window>

